/* ============ BEGIN mixins & variables ============ */

color-ac = #acacac

placeholder(color, font-size)
	&::-webkit-input-placeholder
		color: color
		opacity: 1
		font: font-size robotoregular, sans-serif

	&::-moz-placeholder
		color: color
		opacity: 1
		font: font-size robotoregular, sans-serif

	&:-moz-placeholder
		color: color
		opacity: 1
		font: font-size robotoregular, sans-serif

	&:-ms-input-placeholder
		color: color
		opacity: 1
		font: font-size robotoregular, sans-serif

	&:focus::-webkit-input-placeholder
		opacity: 0

	&:focus::-moz-placeholder
		opacity: 0

	&:focus:-moz-placeholder
		opacity: 0

	&:focus:-ms-input-placeholder
		opacity: 0

color-lighten(color)
	&:hover
		color: lighten(color,15%)

	&:active
		color: lighten(color,30%)

color-darken(color)
	&:hover
		color: darken(color,15%)

	&:active
		color: darken(color,30%)

/* ============ END mixins & variables ============ */

/* ============ BEGIN global modificators ============ */
.text
	&--color-999
		color: #999

	&--color-ac
		color color-ac

	&--color-white
		color: #fff

	&--color-black
		color: #000
		
.fl
	display: flex;

	&--align-c
		align-items: center

	&--align-end 
		align-items: flex-end

	&--col-wrap
		flex-flow: column wrap

	&--just-bet
		justify-content: space-between

	&--just-ar
		justify-content: space-around
		
	&--just-c
		justify-content: center

.let-space--01em
	letter-spacing: -.01em

.btn
	border-radius: 30px
	transition: color .35s ease-in-out, background .35s ease-in-out, box-shadow .35s ease-in-out

	&--blue
		color: #fff
		background: #b8c8e6
/* ============ END global modificators ============ */

